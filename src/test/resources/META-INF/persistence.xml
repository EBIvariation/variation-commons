<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="jpa.metadata">
        <class>uk.ac.ebi.eva.commons.models.metadata.Analysis</class>
        <class>uk.ac.ebi.eva.commons.models.metadata.File</class>
        <class>uk.ac.ebi.eva.commons.models.metadata.FileGenerator</class>
        <class>uk.ac.ebi.eva.commons.models.metadata.Organisation</class>
        <class>uk.ac.ebi.eva.commons.models.metadata.Publication</class>
        <class>uk.ac.ebi.eva.commons.models.metadata.Study</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.connection.url" value="jdbc:hsqldb:mem:spring"/>
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>